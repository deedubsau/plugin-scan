       <h1><%= product_name %> FAQs</h1> 
       <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="faq-table">
        <thead>
          <tr>
            <td>
              &nbsp;
            </td>
          </tr>
        </thead>
        <tbody>
        <% @faqs.each do |faq| %>
          <tr>
            <td>
              <h4>
                <%= faq[0]%>
              </h4>
              <p>
                <%= raw(faq[1]) %>
              </p>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
<script>
 $(document).ready(function(){
   $('#faq-table').dataTable( {
     "sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
      "sPaginationType": "bootstrap",
      "iDisplayLength": 25
    } );
 });
 </script>
